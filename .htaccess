# remember to change the path to index.php if your CI installation is not in the
# root of your site and rename this file to '.htaccess'

RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.php/$1 [L]

# deny access to .txt files, used for flat database
<FilesMatch "\.(txt|sql)$">
	deny from all
</FilesMatch>
